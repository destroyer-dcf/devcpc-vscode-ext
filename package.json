{
    "name": "devcpc-tasks",
    "displayName": "DevCPC",
    "description": "VS Code extension to view and run DevCPC tasks from Explorer pane",
    "icon": "devcpc.png",
    "version": "0.1.2",
    "publisher": "devcpc",
    "repository": {
        "type": "git",
        "url": "https://github.com/destroyer-dcf/devcpc-vscode-ext.git"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "tasks",
        "devcpc",
        "amstrad",
        "cpc",
        "build"
    ],
    "galleryBanner": {
        "color": "#d7ede1"
    },
    "activationEvents": [
        "onView:devcpcTasks",
        "onView:devcpcConfig",
        "workspaceContains:**/devcpc.conf",
        "workspaceContains:**/.vscode/taskcpc.json"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "devcpcTasks",
                    "name": "DevCPC"
                },
                {
                    "id": "devcpcConfig",
                    "name": "DevCPC Config"
                }
            ]
        },
        "commands": [
            {
                "command": "devcpcTasks.executeTask",
                "title": "Execute"
            },
            {
                "command": "devcpcTasks.refresh",
                "title": "Refresh",
                "icon": "assets/refresh_icon.svg"
            },
            {
                "command": "devcpc.editConfigVariable",
                "title": "Editar Variable",
                "icon": "$(edit)"
            },
            {
                "command": "devcpc.toggleConfigVariable",
                "title": "Habilitar/Deshabilitar",
                "icon": "$(circle-slash)"
            },
            {
                "command": "devcpc.refreshConfig",
                "title": "Refrescar Configuraci√≥n",
                "icon": "$(refresh)"
            },
            {
                "command": "devcpc.openIntegratedEmulator",
                "category": "DevCPC",
                "title": "Open Integrated Emulator",
                "icon": "$(device-desktop)"
            },
            {
                "command": "devcpc.resetEmulator",
                "category": "DevCPC",
                "title": "Reset Emulator"
            },
            {
                "command": "devcpc.focusEmulator",
                "category": "DevCPC",
                "title": "Focus Emulator"
            },
            {
                "command": "devcpc.closeEmulator",
                "category": "DevCPC",
                "title": "Close Emulator"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "devcpcTasks.refresh",
                    "when": "view == devcpcTasks",
                    "group": "navigation"
                },
                {
                    "command": "devcpc.refreshConfig",
                    "when": "view == devcpcConfig",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "devcpc.toggleConfigVariable",
                    "when": "view == devcpcConfig && viewItem == configVariable",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/js-yaml": "^4.0.9",
        "@types/mocha": "^2.2.42",
        "@types/node": "^16.x",
        "@types/vscode": "^1.60.0",
        "tslint": "^5.8.0",
        "typescript": "^4.5.0"
    },
    "dependencies": {
        "js-yaml": "^4.1.1"
    }
}
